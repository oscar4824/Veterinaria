<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo Servicio</h3>
    </div>
    <div class="card-body">
      <form action="/pvaciador/new-pvaciador" method="POST">
        <div class="form-group" style="padding: 3%;">
          <input type="text" name="nombrePieza" class="form-control" placeholder="Nombre del Servicio" autofocus />
        </div>
        <div class="form-group" style="padding: 3%;">
          <input type="number" name="precioPieza" class="form-control" placeholder="Precio"></input>
        </div>
        <div class="form-group" style="padding: 3%;">
        <select name="tipo" class="form-select" id="inputGroupSelect01">
            <option selected>Empleado que lo realiza</option>
            <option value="Medico"> Médico </option>
          </select>
        </div>
        <div class="form-group" style="padding: 3%;">
        <select name="categoria" class="form-select" id="inputGroupSelect01">
            <option selected>Categoria </option>
            <option value="Animales"> Servicio </option>
            <option value="Macetas"> Intervención </option>
            <option value="ArtDeco"> Alimento y Cuidado </option>
            <option value="ServCocina"> Animales y Adopción </option>

          </select>
        </div>
        <div class="form-group" style="padding: 3%;">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>