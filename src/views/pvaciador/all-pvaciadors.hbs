<div class="row">
  {{#each vpieza}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{nombrePieza}} <a href="/pvaciadors/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>Precio: ${{formatDecimal precioPieza}}</p>
        <p>Trabajo para: {{tipo}}</p>
        <!-- DELETE REQUEST -->
        <form action="/pvaciadors/delete/{{_id}}?_method=DELETE" method="POST" style="padding: 5%;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola{{user.name}}</h1>
      <p clsss="lead">No hay Piezas aun</p>
      <a href="/pvaciador/add" class="btn btn-success btn-block">Crear Pieza</a>
    </div>
  </div>
  {{/each}}
</div>