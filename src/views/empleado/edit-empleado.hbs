{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Empleado</h3>
    </div>
    <div class="card-body">
      <form action="/empleados/edit-empleado/{{empleado._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group" style="padding: 3%;">
          <input type="text" name="nombre" class="form-control" value="{{empleado.nombre}}"/>
        </div>
        <div class="form-group" style="padding: 3%;">
          <input type="tel" name="telefono" class="form-control" value="{{empleado.telefono}}"/>
        </div>
        <div class="form-group" style="padding: 3%;">
        <select name="tipoEmpleado" class="form-select" id="inputGroupSelect01">
            <option selected>{{empleado.tipoEmpleado}}</option>
            <option value="Vaciador"> Vaciador </option>
            <option value="Trazador"> Trazador </option>
            <option value="Pulidor"> Pulidor </option>
            <option value="Rellenador"> Rellenador </option>
          </select>
          {{!-- <input type="text" name="tipoEmpleado" class="form-control">{{empleado.tipoEmpleado}}</input> --}}
        </div>
        <div class="form-group" style="padding: 3%;">
          <input type="radio" name="asistencia" value="Asistio" required> Verdadero
          <input type="radio" name="asistencia" value="No Asistio" required> Falso
          {{!-- <input type="text" name="asistencia" class="form-control" value="{{empleado.asistencia}}"/> --}}
        </div>
        <div class="form-group" style="padding: 3%;">
          <input type="date" name="fecha" class="form-control" value="{{empleado.fecha}}"/>
        </div>

        <div class="form-group" style="padding: 3%;">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
