<div class="row">
  {{#each empleado}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{nombre}} <a href="/empleados/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>Tipo de Empleado: {{tipoEmpleado}}</p>
        <p>Telefono: {{telefono}}</p>
        <p>Asistencia dia anterior: {{asistencia}}</p>
        <p>Fecha de asistencia anterior: {{dateFormat fecha month="2-digit" day="2-digit" year="numeric"}}</p>
        <!-- DELETE REQUEST -->
        <form action="/empleados/delete/{{_id}}?_method=DELETE" method="POST" style="padding: 5%;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola{{user.name}}</h1>
      <p clsss="lead">No hay Empleados aun</p>
      <a href="/empleado/add" class="btn btn-success btn-block">Crear Empleado</a>
    </div>
  </div>
  {{/each}}
</div>